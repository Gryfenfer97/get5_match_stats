<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta lang="en" />
    <title></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Nunito%20Sans">
    <link rel="stylesheet" href="/assets/style.css">
  </head>

  <body>
    <%- include('partials/navbar') %>
    <main class="container">
      <h1>Resultats</h1>
      <% for(let stage of stages){ %>
      <h4><%= stage.name %></h4>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Match</th>
            <th scope="col">Equipes</th>
            <th scope="col">Score</th>
            <th scope="col">Type</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% for(let match of stage.matches){ %>
          <tr>
            <th scope="row"><%= match.matchid %></th>
            <td><%= match.team1_name %> - <%= match.team2_name %></td>
            <td><%= match.team1_score %> - <%= match.team2_score %></td>
            <td><%= match.series_type %></td>
            <td><a href="/match/<%= match.matchid %>">Voir le d√©tail</a></td>
          </tr>
          <% } %>
        </tbody>
      </table>
      <% } %>
    </main>
  </body>
</html>
